{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "babel",
    "react"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "React$Element": true
  },
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "import/no-named-as-default": 0,
    "jsx-boolean-value": 0,
    "no-floating-decimal": 0,
    "radix": [
      "error",
      "as-needed"
    ],
    "react/jsx-filename-extension": 0,
    "react/sort-comp": 0,
    "global-require": 0,
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "semi": [
      "error",
      "never"
    ],
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/require-default-props": 0,
    "react/prop-types": 0,
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "no-debugger": [
      "warn"
    ]
  },
  "overrides": [
    {
      "files": [
        "src/models/**/*.js",
        "src/stores/**/*.js",
        "**UIModel.js"
      ],
      "rules": {
        "no-param-reassign": 0
      }
    },
    {
      "files": [
        "src/**/*.test.js"
      ],
      "rules": {
        "no-console": 0
      }
    },
    {
      "files": [
        "src/components/**/*.js",
        "src/pages/**/*.js"
      ],
      "rules": {
        "max-len": "off"
      }
    }
  ]
}
